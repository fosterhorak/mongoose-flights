<%- include('../partials/header') %>

  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No.</th>
        <th>Departure Time & Date</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>

      <% flights.forEach(function(m) {  %>
        <tr>
          <td><%= m.airline %></td>
          <td><%= m.airport %></td>
          <td><%= m.flightNo %></td>
          <td><%= m.departs %></td>
          <td><a href="/flights/<%= m._id %>">see details</a></td>
        </tr>
      <% }); %>

    </tbody>
  </table>



<%- include('../partials/footer') %>
