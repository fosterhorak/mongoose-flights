<%- include('../partials/header') %>

<section id="show-page">
    
    <div><strong>Flight No.: </strong><%= flight.flightNo %></div><br>
    <div><strong>Airline: </strong><%= flight.airline %></div><br>
    <div><strong>Airport: </strong><%= flight.airport %></div><br>
    <div><strong>Departure Date & Time: </strong><%= flight.departs %></div><br>

    <div class="show-destinations">
        <h4><strong>Destinations:</strong></h4>
        <table>
            <thead>
                <tr>
                    <th>Airport</th>
                    <th>Arrival Time</th>
                </tr>
            </thead>
            <tbody>
        <% flight.destinations.forEach(function(d) { %>
                <tr>
                    <td><%=d.airport%></td>
                    <td><%=d.arrival%></td>
                </tr>
        <% }); %>
            </tbody>
        </table>
    </div>

</section>
<br><br>
<!-- add new destinations -->

<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">

    <h4><strong>Add New Flight Destination:</strong></h4>
    <label>Select Destination Airport:
        <select name="airport">
            <!--only show available airports (minus departure local and already selected)-->
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option selected = "selected" value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        
        </select>  
      </label><br>
      
      
    <label>Arrival Date & Time:
        <input type="datetime-local" name="arrival"  >
    </label><br>


    <input type="submit" value="Add Destination">

</form>


<%- include('../partials/footer') %>
